TARGETS= manager newserv newclient linkstate distvec

CC=g++
CFLAGS=-Wall -g -Werror -std=c++0x -Wextra

.PHONY: all clean

all: $(TARGETS)

newclient: newclient.o socket.o
	$(CC) $(CFLAGS) newclient.o socket.o -o newclient

newserv: newserv.o socket.o
	$(CC) $(CFLAGS) newserv.o socket.o -o newserv

manager: manager.o socket.o
	$(CC) $(CFLAGS) manager.o socket.o -o manager

linkstate: linkstate.o socket.o
	$(CC) $(CFLAGS) linkstate.o socket.o -o linkstate

distvec: distvec.o socket.o
	$(CC) $(CFLAGS) distvec.o socket.o -o distvec

%.o: %.cpp %.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(TARGETS) *.o *.exe


